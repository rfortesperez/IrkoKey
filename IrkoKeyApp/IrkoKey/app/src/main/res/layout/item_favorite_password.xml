<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/row_favorite"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_corners"
    android:orientation="vertical"
    android:padding="16dp"
    tools:layout_editor_absoluteX="73dp"
    tools:layout_editor_absoluteY="-8dp"    >

    <TextView
        android:id="@+id/tv_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:drawablePadding="16dp"
        android:text="Website"
        android:textColor="@color/md_theme_inverseOnSurface_mediumContrast"
        android:textSize="16sp"
        android:textStyle="italic"
        app:drawableStartCompat="@drawable/web_gr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:drawablePadding="16dp"
        android:text="Username"
        android:textColor="@color/md_theme_inverseOnSurface_mediumContrast"
        android:textSize="16sp"
        android:textStyle="italic"
        app:drawableStartCompat="@drawable/user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_website" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:drawablePadding="16dp"
        android:text="Password"
        android:textColor="@color/md_theme_inverseOnSurface_mediumContrast"
        android:textSize="16sp"
        android:textStyle="italic"
        app:drawableStartCompat="@drawable/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_userName" />


</androidx.constraintlayout.widget.ConstraintLayout>