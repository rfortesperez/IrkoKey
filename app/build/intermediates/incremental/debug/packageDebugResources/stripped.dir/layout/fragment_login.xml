<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@drawable/fondo_18"
    android:orientation="vertical"
    android:padding="0dp">

    <TextView
        android:id="@+id/tv_introduce_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/capriola_regular"
        android:gravity="center"
        android:text="@string/intoduce_data"
        android:textColor="@color/md_theme_inversePrimary_mediumContrast"
        android:textSize="30sp"
        android:textStyle="italic|bold" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/et_rounded"
        android:fontFamily="@font/poppins_regular"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColor="@color/md_theme_background"
        android:textColorHint="@color/md_theme_background" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/et_rounded"
        app:boxStrokeColor="@null"
        app:boxStrokeWidth="0dp"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_password_input"
            boxStrokeWidth="0dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="Password"
            android:inputType="numberPassword"
            android:paddingStart="16dp"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginBottom="232dp"
        android:background="@drawable/button_rounded_corners"
        android:fontFamily="@font/capriola_regular"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="@string/login"
        android:textColor="@color/ml_theme_onPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>