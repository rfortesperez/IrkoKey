<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_favorite"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    android:layout_margin="8dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/rounded_corners"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawablePadding="16dp"
        android:drawableTint="@color/md_theme_inversePrimary_mediumContrast"
        android:text="@string/website"
        android:textColor="@color/md_theme_inversePrimary_mediumContrast"
        android:textSize="32sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/web_gr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawablePadding="16dp"
        android:drawableTint="@color/md_theme_inversePrimary_mediumContrast"
        android:gravity="center"
        android:text="@string/username"
        android:textColor="@color/md_theme_inversePrimary_mediumContrast"
        android:textSize="16sp"
        android:textStyle="italic"
        app:drawableStartCompat="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_website" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutFav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:textColor="@color/md_theme_inversePrimary_mediumContrast"
        app:boxStrokeWidth="0dp"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/md_theme_inversePrimary_mediumContrast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/password"
        app:startIconTint="@color/md_theme_inversePrimary_mediumContrast">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_password_fav"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="@string/password"
            android:inputType="none"
            android:paddingStart="40dp"
            android:textColor="@color/md_theme_inversePrimary_mediumContrast"
            android:textSize="20sp"
            app:boxStrokeWidth="0dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/btn_remove_favorite"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/ic_launcher_background"
        android:clickable="true"
        android:contentDescription="@string/favorite"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_copy_password"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/baseline_favorite_border_24" />

    <ImageButton
        android:id="@+id/btn_copy_password"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/ic_launcher_background"
        android:clickable="true"
        android:contentDescription="@string/copy_password"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/baseline_content_copy_24" />


</androidx.constraintlayout.widget.ConstraintLayout>