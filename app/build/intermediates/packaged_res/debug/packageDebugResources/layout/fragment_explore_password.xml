<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.modules.explorePasswords.ExplorePasswordFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/ml_theme_onPrimary"
        app:tabIndicatorAnimationMode="linear"
        app:tabIndicatorColor="@color/ml_theme_onSecondaryContainer"
        app:tabIndicatorGravity="bottom"
        app:tabTextColor="@color/ml_theme_onSecondaryContainer"
        app:tabSelectedTextAppearance="@color/md_theme_background"
        app:tabIconTint="@color/ml_theme_onSecondaryContainer"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/ml_theme_onSecondaryContainer" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>
</LinearLayout>